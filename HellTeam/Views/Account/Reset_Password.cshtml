
@model ChillLearn.ViewModels.ResetPasswordModel
@{
    ViewBag.Title = "Reset_Password";
}

<div class="fix-header fix-sidebar card-no-border">
    <div class="login-block">
        <div class="login-box">
            <h1><img src="~/Content/images/logo-login.png"></h1>
            <p class="msg-login">Reset Password</p>
            <p>@Html.ValidationMessage("error")</p>
            <p>@Html.ValidationMessage("success")</p>
            <form class="floating-labels floating-block" action="/account/reset_password" method="POST">
                <input type="hidden" name="Token" id="Token" value="@ViewBag.Token" />
                <div class="form-group m-b-50">
                    <input type="password" class="form-control" placeholder="" id="input1" name="Password">
                    <span class="bar"></span>
                    <label for="input1">Password</label>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="m-b-10 m-t-20">&nbsp;</div>
                <div class="form-group m-b-40 m-t-10">
                    <input type="password" class="form-control" placeholder="" id="input2" name="ConfirmPassword">
                    <span class="bar"></span>
                    <label for="input2">Confirm Password</label>
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-12 col-sm-12 text-center">
                    <button type="submit" class="btn login-account">Reset Password</button>
                </div>
                <a href="/account/login">Login</a>
            </form>
        </div>

    </div>
</div>
