<script src="~/Content/js/custom/facbookRegister.js"></script>
<script type="text/javascript">
    $(function () {
        $('#UserRole').change(function () {
            if (parseInt($(this).val()) == 2)
                $('#div-class-control').hide();
            else
                $('#div-class-control').show();
        });
    });
</script>