@model ChillLearn.CustomModels.TeacherProfileModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}
<link href="~/Content/telephone-plugin/css/intlTelInput.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-12 m-t-20">
        <div class="card pending-tutor-box ps-container">
            <div class="profile-user-box">
                @{
                    var imgSrc = "";
                    if (HttpContext.Current.Session["Picture"] != null)
                    {
                        imgSrc = "/Content/images/" + @HttpContext.Current.Session["Picture"].ToString();
                    }
                    else
                    {
                        imgSrc = "/Content/images/NoImage.jpg";
                    }
                }
                <img src="@imgSrc" alt="user" />
            </div>
            <div class="username">
                <h1>@Model.FirstName  @Model.LastName</h1>
                <p>@Resources.Resources.TxtMemberSince @Model.MemberSince</p>
            </div>
            <div class="list-box">
                <ul>
                    <li>
                        <span>@Resources.Resources.TxtHoursSpent</span>
                        <p>@Model.HoursSpent</p>
                    </li>
                    <li>
                        <span>@Resources.Resources.TxtClassesTaught</span>
                        <p>@Model.ClassesTaught</p>
                    </li>
                    <li>
                        <span>@Resources.Resources.TxtQuestionsAnswered</span>
                        <p>@Model.QuestionsAnswered</p>
                    </li>
                </ul>
            </div>
            <div class="edit-profile-but">
                <a href="javascript:;" data-toggle="modal" data-target="#profile-view"><img src="~/Content/images/edit.svg"> @Resources.Resources.BtnEditProfile</a>
            </div>
            <div class="form-edit-profile">
                <div class="row form-material">
                    <div class="col-md-6">
                        <label class="m-t-20">@Resources.Resources.LblFirstName</label>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        <label class="m-t-40">@Resources.Resources.LblEmailId</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        <label class="m-t-40">@Resources.Resources.LblCountry</label>
                        @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    <div class="col-md-6">
                        <label class="m-t-20">@Resources.Resources.LblLastName</label>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        <label class="m-t-40">@Resources.Resources.LblMobileNo</label>
                        @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        <label class="m-t-40">@Resources.Resources.LblCity</label>
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    <div class="col-md-12">
                        <label class="m-t-20">@Resources.Resources.LblAddress</label>
                        @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-md-6">
                        <label class="m-t-20">@Resources.Resources.LblTitle</label>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    <div class="col-md-6">
                        <label class="m-t-20">@Resources.Resources.LblQualification</label>
                        @Html.EditorFor(model => model.Qualification, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    <div class="col-md-12">
                        <label class="m-t-20">@Resources.Resources.LblExperience</label>
                        @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    <div class="col-md-12">
                        <label class="m-t-20">@Resources.Resources.LblAboutMe</label>
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @readonly = "readonly", @placeholder = @Resources.Resources.PlcTellUsAbout })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

