<script type="text/javascript">

    $('.editSubject').click(function () {
        var subjectId = $(this).data('subjectid');
        var stageId = $(this).data('stageid');
        $("#selectSubject").val(subjectId);
        $("#selectStage").val(stageId);
        $('#subjectForm').show();
    });

    $("#selectSubject").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/tutor/getsubjects",
                data: {
                    "name": request.term
                },
                type: "GET",
                contentType: "json",
                success: function (data) {
                    response($.map(data, function (item) {
                        return { label: item.SubjectName, value: item.SubjectName };
                    }))
                },
                error: function (response) {
                    console.log('error');
                },
                failure: function (response) {
                    console.log('fail');
                }
            });
        }
    });

    $("#btnAddNew").click(function () {
        if ($("#selectSubject").val() != "" && $("#selectStage").val() !== "") {
            $.ajax({
                url: "/tutor/addteacherstage",
                data: JSON.stringify({
                    SubjectName: $("#selectSubject").val(),
                    StageId: $("#selectStage").val()
                    //HourlyRate: $("#hourlyRate").val()
                }),
                type: "Post",
                datatype: "Json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#selectSubject").val('');
                    $("#selectStage").val('');
                    location.reload();
                },
                error: function (response) {
                    $("#errorResponceStage").css("display", "block");
                },
                failure: function (response) {
                    console.log('fail');
                }
            });
        }
        else {
            $("#errorValidationStage").css("display", "block");
        }
    });

    $("#btnAddNewLanguage").click(function () {
        if ($("#selectLanguage").val() != "" && $("#selectLanguageLevel").val() !== "") {
            $.ajax({
                url: "/tutor/addteacherlanguage",
                data: JSON.stringify({
                    LanguageID: $("#selectLanguage").val(),
                    LanguageLevel: $("#selectLanguageLevel").val()
                }),
                type: "Post",
                datatype: "Json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#selectLanguage").val('');
                    $("#selectLanguageLevel").val('');
                    location.reload();
                },
                error: function (response) {
                    $("#errorResponceStage").css("display", "block");
                },
                failure: function (response) {
                    console.log('fail');
                }
            });
        }
        else {
            $("#errorValidationLanguage").css("display", "block");
        }
    });

    $("#btnAddNewQual").click(function () {
        if ($("#qTitle").val() != "" && $("#qQualfication").val() !== "" && $("#qExperience").val() !== "") {
            $.ajax({
                url: "/tutor/addteacherqualification",
                data: JSON.stringify({
                    DegreeTitle: $("#qTitle").val(),
                    InstituteName: $("#qInstitute").val(),
                    YearPassed: $("#qPassedYear").val()
                }),
                type: "Post",
                datatype: "Json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#qTitle").val('');
                    $("#qInstitute").val('');
                    location.reload();
                },
                error: function (response) {
                    $("#errorResponce").css("display", "block");
                },
                failure: function (response) {
                    console.log('Request fail please contact support');
                }
            });
        }
        else {
            $("#errorValidation").css("display", "block");
        }
    });

    $("#btnAddNewCertification").click(function () {
        $("#errorResponceC").css("display", "none");
        $("#errorValidationC").css("display", "none");
        $("#loaderSpinner").css("display", "block");
        $("#btnAddNewCertification").prop("disabled", true);
        var formData = new FormData();
        var files = $("#cFile").get(0).files;
        formData.append("file", files[0]);
        formData.append("DegreeTitle", $('#cTitle').val());
        formData.append("InstituteName", $('#cInstitute').val());
        formData.append("YearPassed", $('#cPassedYear').val());
        if ($("#cTitle").val() != "" && $("#cInstitute").val() !== "" && $("#cPassedYear").val() !== "") {
            $.ajax({
                url: "/tutor/addteachercertification",
                data: formData,
                type: "Post",
                cache: false,
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data == "true") {
                        $('#cTitle').val('');
                        $('#cInstitute').val('');
                        location.reload();
                    }
                    else {
                        $("#btnAddNewCertification").prop("disabled", false);
                        $("#errorResponceC").css("display", "block");
                        $("#loaderSpinner").css("display", "none");
                    }
                },
                error: function (response) {
                    $("#btnAddNewCertification").prop("disabled", false);
                    $("#errorResponceC").css("display", "block");
                    $("#loaderSpinner").css("display", "none");
                },
                failure: function (response) {
                    $("#btnAddNewCertification").prop("disabled", false);
                    $("#loaderSpinner").css("display", "none");
                    console.log('Request fail please contact support');
                }
            });
        }
        else {
            $("#errorValidationC").css("display", "block");
            $("#btnAddNewCertification").prop("disabled", false);
            $("#loaderSpinner").css("display", "none");
        }
    });

    $(".deleteRecord").click(function () {
        var dataId = $(this).data('id');
        var dataType = $(this).data('type');
        var confirmDelete = confirm('@Resources.Resources.LblConfirmDelete');
        if (confirmDelete) {
            $.ajax({
                url: "/tutor/deleteteacherdata",
                data: JSON.stringify({
                    id: dataId,
                    type: dataType
                }),
                type: "Post",
                datatype: "Json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    location.reload();
                },
                error: function (response) {
                    console.log('error in deletion');
                },
                failure: function (response) {
                    console.log('fail');
                }
            });
        }
    });

    var accountEditMode = false;
    $('#btnEditAccountDetails').click(function () {
        if (!accountEditMode) {
            $('#accountForm').find(".form-control").removeAttr('readonly');
            $(this).text('@Resources.Resources.BtnSave');
            accountEditMode = true;
        }
        else {
            SaveAccountDetails();
            $('#accountForm').find(".form-control").attr('readonly', 'readonly');
            accountEditMode = false;
        }
    });

    $('#btnSaveAccountDetails').click(function () {
        SaveAccountDetails();
    });

    function SaveAccountDetails() {
            var accountNumber = $.trim($("#AccountDetail_AccountNo").val());
            var branchName = $.trim($("#AccountDetail_BranchName").val());
            var branchCode = $.trim($("#AccountDetail_BranchCode").val());
            var accountTitle = $.trim($("#AccountDetail_AccountName").val());
            var pinCode = $.trim($("#AccountDetail_PinNo").val());
            if (accountNumber != "" && branchName !== "" && branchCode !== "" && accountTitle !== "" && pinCode !== "") {
                $.ajax({
                    url: "/tutor/saveteacheraccount",
                    data: JSON.stringify({
                        AccountNo: accountNumber,
                        BranchName: branchName,
                        BranchCode: branchCode,
                        AccountName: accountTitle,
                        PinNo: pinCode
                    }),
                    type: "Post",
                    datatype: "Json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        location.reload();
                    },
                    error: function (response) {
                        console.log('error');
                    },
                    failure: function (response) {
                        console.log('failure');
                    }
                });
            }
            else {
                $("#msgAccountValidation").css("display", "block");
            }
    }

    function ToggleForm(formName) {
        $('#' + formName).toggle();
    }

</script>
