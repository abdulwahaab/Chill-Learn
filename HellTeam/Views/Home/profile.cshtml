@model ChillLearn.CustomModels.TeacherProfileView
@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
    <section class="login-content p-b-40 p-t-30">
        <div class="container">
            @if (Model != null && Model.Profile != null)
            {
                <div class="row">
                    <div class="book-a-session-heading col-md-12">
                        <h1>Book A Session</h1>
                        @*<p>Lorem ipsum dorem sit emit consectiture dome smith.</p>*@
                    </div>
                </div>
                <!-- Book row-->

                <div class="book-session-large">
                    <div class="session--inner-block">
                        <div class="row bg-white p-10">
                            <div class="col-md-1">&nbsp;</div>
                            <div class="col-md-4 p-t-30">
                                <div class="user-book-photo">
                                    <img src="/content/images/@Model.Profile.Picture" style="width:200px;height:200px;border-radius:50%;">
                                </div>
                                <div class="user-book-heading user-book-heading-two">
                                    <h2>@Model.Profile.FirstName @Model.Profile.LastName</h2>
                                    <p>@Model.Profile.Title</p>
                                    <a href="/chat/inbox?c=@Model.Profile.UserId" class="btn btn-rounded sign-in-but chat-but">Chat</a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="session-rightbox session-rightbox-block">
                                    <span>4.5</span>
                                    <div class="star-number star-number-text">
                                        <div class="reviews-left">
                                            <h3>Based on 28 reviews</h3>
                                            <p><img src="/content/images/star-small.png"></p>
                                        </div>
                                        <div class="fa-box">
                                            <i class="fa fa-question-circle-o" aria-hidden="true"></i>
                                        </div>
                                        <div class="star-right-box">
                                            <ul>
                                                <li>Tutor Communication</li>
                                                <li><img src="/content/images/star-small.png"></li>
                                                <li>Tutor Explaining Method</li>
                                                <li><img src="/content/images/star-small.png"></li>
                                                <li>Recommend Tutor</li>
                                                <li><img src="/content/images/star-small.png"></li>
                                            </ul>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-1">&nbsp;</div>
                        </div>

                    </div>
                </div>

                <div class="book-session-large book-session-left m-t-20">
                    <div class="row">
                        <div class="col-md-6 timecontact">
                            <img src="/content/images/clock.svg">
                            <div class="leftcontact">
                                <p>Preffered time to contact</p>
                                <h6>15:00 to 20:30 IST</h6>
                            </div>
                        </div>

                        <div class="col-md-6 text-right">
                            <button type="button" class="btn btn-success btn-rounded accept-block">Book A Session</button>
                            <a href="#" class="btn btn-rounded btn-outline-success decline-block">Ask Question</a>
                        </div>
                    </div>
                </div>


                <div class="book-session-large book-session-left tab-block how-block">
                    <div class="row  bg-white">
                        <!-- Nav tabs -->
                        <ul class="nav nav-fill customtab col-md-12" role="tablist">
                            <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#home2" role="tab"><span class="hidden-sm-up"><i class="ti-home"></i></span> <span class="hidden-xs-down">About Teacher</span></a> </li>
                            <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#profile2" role="tab"><span class="hidden-sm-up"><i class="ti-user"></i></span> <span class="hidden-xs-down">Rate & Reviews</span></a> </li>
                            <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#messages2" role="tab"><span class="hidden-sm-up"><i class="ti-email"></i></span> <span class="hidden-xs-down">FAQ’s</span></a> </li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content customtab col-md-12">
                            <div class="tab-pane active p-4" id="home2" role="tabpanel">
                                <div class="about-block">
                                    <h3>About Me</h3>
                                    <p>@Model.Profile.Description</p>
                                </div>
                                @if (Model.Subjects.Count > 0)
                                {
                                    <div class="about-block">
                                        <h3>Skills & Subject Tutored</h3>
                                        <ul class="p-l-0 list-unstyled">
                                            @foreach (var item in Model.Subjects)
                                            {
                                                <li>@item.SubjectName</li>
                                            }
                                        </ul>
                                    </div>
                                }
                            <div class="about-block right-block-education">
                                <h3>Education & Qualification</h3>
                                <ul class="list-unstyled p-l-0">
                                    <li>
                                        <p>
                                            <span><img src="/content/images/surface.svg"></span>
                                            <span>Education</span>
                                        </p>
                                     
                                        @if (Model.Education.Count > 0)
                                        {
                                            foreach (var edu in Model.Education)
                                            {
                                                <h6>@edu.DegreeTitle, @edu.InstituteName</h6>
                                            }
                                        }
                                        else
                                        {
                                            <h6>No Education Found</h6>
                                        }
                                    </li>
                                    <li>
                                        <p>
                                            <span><img src="/content/images/students-cap.svg"></span>
                                            <span>Highest Qualification</span>
                                        </p>
                                        <h6>@Model.Profile.Qualification</h6>
                                    </li>

                                </ul>
                            </div>
                                <div class="about-block right-block-education">
                                    <h3>More Information</h3>
                                    <ul class="p-l-0 list-unstyled">
                                        <li>Location: @Model.Profile.City, @Model.Profile.Country</li>
                                        <li>Experience: @Model.Profile.Experience Years</li>
                                    </ul>
                                    @*<form class="form-material m-t-40">
                                        <div class="form-group">
                                            <label>Email ID </label>
                                            <input type="text" class="form-control" placeholder="Johnsnow_me@gmail.com" value="@Model.Profile.Email" readonly>
                                        </div>
                                        <div class="form-group">
                                            <label for="example-email">Location</label>
                                            <input type="email" class="form-control" value="@Model.Profile.City, @Model.Profile.Country" placeholder="New Delhi, India" readonly>
                                        </div>
                                        <div class="form-group">
                                            <label>Teaching Experience</label>
                                            <input type="text" class="form-control" value="@Model.Profile.Experience" placeholder="4-5 Years" readonly>
                                        </div>
                                        <div class="form-group">
                                            <label>Gender</label>
                                            <input type="text" class="form-control" placeholder="Male" readonly>
                                        </div>

                                    </form>*@
                                </div>
                            </div>
                            <div class="tab-pane  p-20" id="profile2" role="tabpanel">2</div>
                            <div class="tab-pane p-20" id="messages2" role="tabpanel">3</div>
                        </div>
                    </div>
                </div>
            }
            </div>
    </section>


